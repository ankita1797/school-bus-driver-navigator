<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvaddbus"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add the buses here"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="italic"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutaddbus"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/tvaddbus">
        <EditText
            android:id="@+id/addbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bus Number"
            android:textColor="#000000"
            android:inputType="number"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutaddschool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/layoutaddbus">
        <EditText
            android:id="@+id/addschool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School"
            android:textColor="#000000"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutaddAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/layoutaddschool">
        <EditText
            android:id="@+id/addAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColor="#000000"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutaddAddress"
        android:text="ADD"
        android:layout_centerInParent="true"/>

</RelativeLayout>